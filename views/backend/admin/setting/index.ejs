<% include ../../../partials/head %>
<title>Site Setting</title>
</head>
<body class="vertical-layout vertical-content-menu 1-column menu-expanded fixed-navbar"
data-open="click" data-menu="vertical-content-menu" data-col="1-column">
<div id="app-root" class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <section class="flexbox-container">
                <div class="col-12 d-flex align-items-center justify-content-center">
                    <div class="col-md-5 col-12 box-shadow-2 p-0">
                        <div class="card border-grey border-lighten-3 m-0">
                            <div class="card-header border-0">
                                <div class="card-title text-center">
                                    <div class="p-1">
                                        <img src="/images/logo/logo-dark.png" alt="branding logo">
                                    </div>
                                </div>
                                <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2">
                                    <span>Site Setup</span>
                                </h6>
                            </div>
                            <div class="card-content">
                                <setting-form :setting="{siteName:'<%= settings.siteName %>',siteOwner:'<%= settings.siteOwner %>',siteDescription:'<%= settings.siteDescription %>',siteMail:'<%= settings.siteMail %>',facebookUri:'<%= settings.facebookUri %>',twitterUri:'<%= settings.twitterUri %>',googleUri:'<%= settings.googleUri %>', bitcoinAddress: '<%= settings.bitcoinAddress %>'}" :account="<% if(userDetails.length){%>true<% } else { %>false<% } %>"></setting-form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="/js/main-bundle.min.js"></script>
</body>
</html>
